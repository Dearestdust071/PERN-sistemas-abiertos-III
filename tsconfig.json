{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "./src",
        "lib": [
            "esnext"
        ],
        "strict": false,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDirs": [
            "./src"
        ],
        "declaration": false,
        "paths": {
            "*": [
                "./src/*"
            ]
        },
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}