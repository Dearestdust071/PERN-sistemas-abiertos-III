{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",  
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "strict": false,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": false,
    "paths": {
      "*": ["./src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
